import struct,random,os; w=h=512; p=os.path.join('PapiroFeister','Content','Textures','paper_cartoon_nodots.bmp'); os.makedirs(os.path.dirname(p),exist_ok=True); random.seed(77123); pad=(4-(w*3)%4)%4; data=(w*3+pad)*h; size=54+data; f=open(p,'wb'); f.write(b'BM'); f.write(struct.pack('<IHHI',size,0,0,54)); f.write(struct.pack('<IIIHHIIIIII',40,w,h,1,24,0,data,2835,2835,0,0));
for y in range(h):
 yy=h-1-y; row=bytearray();
 for x in range(w):
  base=236+int(8*(random.random()-0.5)); r=max(0,min(255,base+8)); g=max(0,min(255,base+4)); b=max(0,min(255,base-18));
  if yy%36 in (0,1): r=int(r*0.82+155*0.18); g=int(g*0.82+205*0.18); b=int(b*0.82+255*0.18)
  row.extend((b,g,r))
 row.extend(b'\x00'*pad); f.write(row)
f.close()
